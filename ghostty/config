font-family = "Hack Nerd Font"
font-size = 18
font-feature = -liga

shell-integration = zsh
initial-command = /bin/zsh -c '[ -n "$(tmux list-sessions 2>/dev/null)" ] && tmux attach || tmux new-session -s notes -c ~/Documents/obsidian-vault/notes nvim'

background = #000000
window-decoration = false
window-padding-color = background
confirm-close-surface = false
window-padding-y = 0
window-padding-x = 8

# tmux new window
keybind = super+t=text:\x02c

# tmux choose-session
keybind = super+p=text:\x02s
keybind = super+l=text:\x02L

# tmux split panes
keybind = super+d=text:\x02|
keybind = super+shift+d=text:\x02_

# tmux navigate split panes
keybind = super+left_bracket=text:\x02;
keybind = super+right_bracket=text:\x02o

# tmux select window
keybind = super+digit_1=text:\x021
keybind = super+digit_2=text:\x022
keybind = super+digit_3=text:\x023
keybind = super+digit_4=text:\x024
keybind = super+digit_5=text:\x025
keybind = super+digit_6=text:\x026
keybind = super+digit_7=text:\x027
keybind = super+digit_8=text:\x028
keybind = super+digit_9=text:\x029

# option+j/k for history navigation
keybind = alt+k=csi:A
keybind = alt+j=csi:B

# reload config
keybind = super+r=reload_config
